@using BooksRealm.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<BooksRealmUser> SignInManager
@inject UserManager<BooksRealmUser> UserManager

<ul class="navbar-nav d-inline">
@if (SignInManager.IsSignedIn(User))
{
    <li >
        <a  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li >
        <form  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn primary-btn">Logout</button>
        </form>
    </li>
}
else
{
    <li >
        <a  asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li >
        <a  asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
