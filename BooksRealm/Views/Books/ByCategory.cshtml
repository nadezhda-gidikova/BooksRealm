@using BooksRealm.Components;
@model IEnumerable<BooksRealm.Models.Books.BookInListViewModel>
@{
    this.ViewData["Title"] = "@Model.CategoryName";
}

<h1 class="text-info">@this.ViewData["Title"]</h1>
<hr />
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="trending__product">
                    <partial name="_BookPartial" model="@Model" />
                </div>

            </div>
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="product__sidebar" style="margin-left:100px">
                    <div class="product__sidebar__view">
                        <div class="section-title">
                            <br />
                            <h4>Top Books of 2021</h4>
                            <br />
                            @await Component.InvokeAsync(typeof(TopBooksComponent));
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<hr />
