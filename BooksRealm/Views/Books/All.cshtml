@using BooksRealm.Components
@model BooksRealm.Models.Books.BookListViewModel
@{
    this.ViewData["Title"] = "All Books, page " + Model.PageNumber;
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}
<h1 class="text-info">@this.ViewData["Title"]</h1>
<hr />
<hr />
<partial name="_PagingPartial" model="@Model" />
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="trending__product">
                    <div class="row">
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            <div class="section-title">
                                <h4>Recent books</h4>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="btn__all">
                                <a asp-controller="Books" asp-action="All" class="primary-btn">View All <span class="arrow_right"></span></a>
                            </div>
                        </div>
                    </div>
                    <partial name="_BookPartial" model="@Model.Books" />
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="product__sidebarstyle=" style="margin-left:100px">
                    <div class="product__sidebar__view">
                        <div class="section-title">
                            <br />
                            <h4>Top Books of 2021</h4>
                            <br />
                            @await Component.InvokeAsync(typeof(TopBooksComponent));
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

