@model BooksRealm.Models.Authors.AuthorListViewModel

@{
    ViewBag.Title = "Books Administration";
}

<h1>All Authors</h1>

<a asp-area="Admin" asp-controller="Authors" asp-action="Add" class="btn btn-warning float-right ml-3">Add New Author</a>


<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model.Authors)
        {
            <tr>
                <td scope="col">@author.Id</td>
                <td scope="col">@author.Name</td>
                <td scope="col">
                    <a asp-area="Admin" asp-controller="Authors" asp-action="Delete" asp-route-id="@author.Id" class="btn btn-danger float-right ml-3">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<partial name="_PagingPartial" model="@Model" />